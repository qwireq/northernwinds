<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.northernwinds.northernwinds.FeedbackActivity"
    android:background="@drawable/back"
    android:gravity="center"
    android:paddingTop="36dp"
    android:paddingBottom="36dp"
    >

    <com.northernwinds.northernwinds.ScrollViewExt
            android:id="@+id/feedbackScrollView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:isScrollContainer="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="20dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:orientation="vertical"
                >
            <WebView
                android:id="@+id/feedbackWebView"
                android:textColor="#221401"
                android:lineSpacingMultiplier="1.5"
                android:textSize="20sp"
                android:padding="10dp"
                android:alpha="1.2"
                android:gravity="fill"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/emailTextView"
                android:autoLink="email"
                android:textColorLink="@android:color/holo_blue_dark"
                android:text="astana.winds@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#221401"
                android:lineSpacingMultiplier="1.5"
                android:textSize="20sp"
                android:padding="10dp"
                android:alpha="1.2"
                android:gravity="fill"
                />
            <WebView
                android:id="@+id/takjeWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#221401"
                android:lineSpacingMultiplier="1.5"
                android:textSize="20sp"
                android:padding="10dp"
                android:alpha="1.2"
                android:gravity="fill"
                android:text=""
                >

            </WebView>
            <WebView
                android:id="@+id/contactsWebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#221401"
                android:lineSpacingMultiplier="1.5"
                android:textSize="20sp"
                android:padding="10dp"
                android:alpha="1.2"
                android:gravity="fill"
                android:text=""
                >

            </WebView>
            <WebView
                android:id="@+id/spasibWebView"
                android:layout_gravity="left"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#221401"
                android:lineSpacingMultiplier="1.5"
                android:textSize="20sp"
                android:padding="10dp"
                android:alpha="1.2"
                android:gravity="fill"
                />
            </LinearLayout>
    </com.northernwinds.northernwinds.ScrollViewExt>


</RelativeLayout>
